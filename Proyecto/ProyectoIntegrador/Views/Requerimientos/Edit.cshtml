@model ProyectoIntegrador.BaseDatos.Requerimiento

@{
    ViewBag.Title = "Edit";
}
<br />
<h2 align="center">Editar Requerimiento </h2>
<hr />

<div class="container" align="center">
    <form class="cmxform" id="commentForm" method="post" action="Edit">
        <fieldset>
            <p>
                <label for="creq">ID del Requerimiento: </label>
                <input id="creq" name="idRequerimiento" value="@Model.idReqPK" readonly />
            </p>

            <p>
                <label for="cproy">ID del Requerimiento: </label>
                <input id="cproy" name="idProyecto" value="@Model.idProyectoFK" readonly />
            </p>

            <p>
                <label for="cnombre">Nombre: </label>
                <input id="cnombre" name="nombre" minlength="1" value="@Model.nombre" maxlength="20" type="text" />
            </p>

            <p>
                <label for="cdesc">Descripción: </label>
                <input id="cdesc" name="descripcion" minlength="1" value="@Model.descripcion" maxlength="100" type="text" style="width = 300px" />
            </p>

            <p>
                <label for="cde">Duración estimada:</label>
                <input id="cde" type="time" name="duracionEstimada" value="@Model.tiempoEstimado" placeholder="HH:MM">
                <small class="form-text text-muted text-danger">
                    Formato hh:mm
                </small>
            </p>

            <p>
                <label for="cfechai">Fecha de inicio: </label>
                <input id="cfechai" type="text" name="fechai" value="@Model.fechaDeInicio" placeholder="DD-MM-AAAA">
                <small class="form-text text-muted text-danger">
                    Si no hay cambios, la fecha de inicio es la fecha actual del sistema.
                </small>
            </p>

            <p>
                <label for="cfechaf">Fecha de fin: </label>
                <input id="cfechaf" type="text" name="fechaf" value="@Model.fechaDeFinalizacion" placeholder="DD-MM-AAAA">
                <small class="form-text text-muted text-danger">
                    Si no hay cambios, la fecha será el 01-01-1800.
                </small>
            </p>

            <div class="input-group">
                <p class="text-black">Complejidad: </p>
                <select class="custom-select" name="complejidad">
                    <option value="Simple">Simple</option>
                    <option selected>Medio</option>
                    <option value="Complejo">Complejo</option>
                    <option value="Muy Complejo">Muy Complejo</option>
                </select>
            </div>
            <br />
            <div class="input-group" align="center">
                <p class="text-black">Estado: </p>
                <select class="custom-select" name="estado">
                    <option value="Activo">Activo</option>
                    <option selected>Preparación</option>
                    <option value="Terminado">Terminado</option>
                </select>
            </div>
            <br />
            <div class="input-group mb-3" align="center">
                <div class="input-group-prepend" align="center">
                    <label class="input-group-text" for="inputGroupSelect03">Testers disponibles:</label>
                </div>
                <select class="custom-select" name="idTester" id="inputGroupSelect03">

                    @foreach (var item in ViewBag.cedulaTesterFK)
                    {
                        <option value="@item.idEmpleadoPK"> @item.nombre @item.apellido1 @item.apellido2 </option>
                    }
                </select>
            </div>

            <p>
                <input class="submit" type="submit" value="Submit">
            </p>
        </fieldset>
    </form>

    <script>
        $("#commentForm").validate();
    </script>

    <script>
        $(function () {
            $('[data-toogle="tooltip"]').tooltip()
        }
        )
    </script>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", new { idProyecto = Model.idProyectoFK })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
